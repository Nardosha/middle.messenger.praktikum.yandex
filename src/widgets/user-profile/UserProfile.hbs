<section class='user-profile'>
  <header class='user-profile__header'>
    <div class="user-profile__header-top">
      <img src="" alt="Background"/>
    </div>

    <div class="user-profile__header-bottom">
      <div class='user-profile__avatar'>S</div>

    <div class='user-profile__header-info'>
      <div class='user-profile__user-info'>
        <div class='user-profile__user-name'>Sylvia Reyes</div>

        <div class='user-profile__user-phone'>+44656548060</div>
      </div>

      <button class='user-profile__logout-button'>logout</button>
    </div>
    </div>
  </header>

  <main class="user-profile__content">

