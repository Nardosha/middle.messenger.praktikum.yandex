    <li class='user-profile__tab'>General</li>
    <li class='user-profile__tab'>Security</li>
  </ul>

  <div class='user-profile__tabs-content'>
    <h2 class='user-profile__tab-title'>General</h2>

    {{>Input inputId="first_name" labelTitle="First name" inputValue="Sylvia" inputType="text"}}
    {{>Input inputId="second_name" labelTitle="Second name" inputValue="Reyes" inputType="text"}}
    {{>Input inputId="display_name" labelTitle="Display name" inputValue="Sylvia Reyes" inputType="text"}}
    {{>Input inputId="login" labelTitle="Login" inputValue="reyessylvia" inputType="text"}}
    {{>Input inputId="phone" labelTitle="Phone number" inputValue="+44656548060" inputType="phone"}}
    {{>Input inputId="email" labelTitle="Email" inputValue="reyessylvia@gmail.com" inputType="email"}}
  </div>
  </main>
</section>